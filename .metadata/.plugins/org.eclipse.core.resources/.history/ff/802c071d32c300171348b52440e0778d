# DATA SOURCE ------------------------------------------------------------

# Configuration for database connection

# Connection url for database 
spring.datasource.url = jdbc:mysql://localhost:3306/OnlineBanking

# Username and pass
spring.datasource.username = root
#spring.datasource.data-password = "Milan994!"

# Keep the connection alive if idle for a long time
spring.datasource.testWhileIdle = true
spring.datasource.validationQuery = SELECT 1

# JPA / HIBERNATE ---------------------------------------------------------

#Show or not log for each sql query
spring.jpa.show-sql = true

#Hibernate ddl (create, create-drop, update)
spring.jpa.hibernate.ddl-auto = update

# Allows Hibernate to generate SQL optimized for a particular DMBS
spring.jpa.properties.hibernate.dialect = org.hibernate.dialect.MySQL5Dialect